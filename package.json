  "license": "ISC",
  "scripts": {
    "start": "node ./bin/www",
    "watch": "nodemon --inspect ./bin/www",
    "watch-all": "concurrently --name 'express react stylus' --prefix name 'npm run watch' 'cd client/ && npm run start' 'cd client/ && npm run styles:watch'",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "agenda": "^1.0.3",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^5.0.1",
    "es6-promise": "^4.2.4",
    "express": "~4.15.5",
    "isomorphic-fetch": "^2.2.1",
    "jade": "~1.11.0",
    "mongoose": "^5.0.10",
    "morgan": "~1.9.0",
    "serve-favicon": "~2.4.5",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "concurrently": "3.0.0",
    "nodemon": "^1.17.1"
  },
  "engines": {
    "node": "8.9.4"
  }
}